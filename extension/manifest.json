{
  "manifest_version": 3,
  "name": "LegalEase AI",
  "version": "1.0.0",
  "description": "AI-powered legal document analysis and clause detection for web content",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://legalease-ai.vercel.app/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LegalEase AI"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["tooltip.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
